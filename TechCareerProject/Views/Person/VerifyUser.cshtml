@model TechCareerProject.Models.PersonModel

<h2>Kimlik Doğrulama Formu</h2>
<h5 style="color:gray">Nüfus Müdürlüğü Tarafında Herkeze Açık Paylaşılan SOAP Servisi Kullanılmaktadır.</h5>
<h6 style="color:grey">WSDL URL: https://tckimlik.nvi.gov.tr/Service/KPSPublic.asmx?WSDL</h6>

@using (Html.BeginForm("Validate", "Person", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Surname)
        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IdNumber)
        @Html.TextBoxFor(model => model.IdNumber, new { @class = "form-control", required = "required", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BirthYear)
        @Html.TextBoxFor(model => model.BirthYear, new { @class = "form-control", required = "required", type = "number" })
    </div>

    <button type="submit" class="btn btn-primary mt-4">Submit</button>
}