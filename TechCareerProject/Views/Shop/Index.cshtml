@model IEnumerable<TechCareer.Website.Models.Product>

<h2>Product List</h2>

<a href="@Url.Action("Create", "Shop")" class="btn btn-primary mb-4">Create New Product</a>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>@product.Price.ToString("C")</strong></p>
                    <a href="@Url.Action("Details", "Shop", new { id = product.Id })" class="btn btn-primary">View Details</a>
                    <a href="@Url.Action("Edit", "Shop", new { id = product.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Shop", new { id = product.Id })" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
